{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "**/__tests__/**/*.(js|jsx|ts|tsx)",
    "**/*.(test|spec).(js|jsx|ts|tsx)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/build/"
  ],
  "collectCoverageFrom": [
    "js/**/*.js",
    "!js/**/*.min.js",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "html",
    "text",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapping": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy"
  },
  "globals": {
    "CONFIG": true,
    "SELECTORS": true,
    "CLASSES": true
  }
}