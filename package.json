{
  "name": "professional-todo-app",
  "version": "1.0.0",
  "description": "A professional, modern and responsive todo application built with vanilla JavaScript, HTML5 and CSS3",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/.",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "postcss css/style.css --use autoprefixer --use cssnano -o dist/css/style.min.css",
    "minify:js": "terser js/app.js -c -m -o dist/js/app.min.js",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write .",
    "test": "jest",
    "start": "npm run dev"
  },
  "keywords": [
    "todo",
    "javascript",
    "html5",
    "css3",
    "vanilla-js",
    "progressive-web-app",
    "local-storage",
    "responsive-design"
  ],
  "author": {
    "name": "MÃ¡rcio Soeiro",
    "email": "contato@soeirotech.com.br",
    "url": "https://soeirotech.com.br"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mandresoeiro/To-Do-List.git"
  },
  "bugs": {
    "url": "https://github.com/mandresoeiro/To-Do-List/issues"
  },
  "homepage": "https://mandresoeiro.github.io/To-Do-List",
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.1.0",
    "eslint": "^8.30.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.3.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.0",
    "terser": "^5.16.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}